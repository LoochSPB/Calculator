<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/monitor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_land_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:background="@color/gray"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/gridLayout"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/key_clear"
                android:layout_width="@dimen/button_size_land_width"
                android:layout_height="@dimen/button_size_land_height"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/default_margin"
                android:backgroundTint="@color/orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/key_clear"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_land"
                app:cornerRadius="16dp"
                app:strokeColor="@color/dark_gray"
                app:strokeWidth="8dp" />

            <Button
                android:id="@+id/key_parentheses"
                android:layout_width="@dimen/button_size_land_width"
                android:layout_height="@dimen/button_size_land_height"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/default_margin"
                android:backgroundTint="@color/gray"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/key_parentheses"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_land"
                app:cornerRadius="16dp"
                app:strokeColor="@color/dark_gray"
                app:strokeWidth="8dp" />

            <Button
                android:id="@+id/key_percent"
                android:layout_width="@dimen/button_size_land_height"
                android:layout_height="@dimen/button_size_land_height"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/default_margin"
                android:backgroundTint="@color/gray"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/key_percent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_land"
                app:cornerRadius="16dp"
                app:strokeColor="@color/dark_gray"
                app:strokeWidth="8dp" />

            <Button
                android:id="@+id/key_division"
                android:layout_width="@dimen/button_size_land_height"
                android:layout_height="@dimen/button_size_land_height"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/default_margin"
                android:backgroundTint="@color/gray"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/key_division"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_land"
                app:cornerRadius="16dp"
                app:strokeColor="@color/dark_gray"
                app:strokeWidth="8dp" />

            <Button
                android:id="@+id/key_1"
                android:layout_width="@dimen/button_size_land_height"
                android:layout_height="@dimen/button_size_land_height"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/default_margin"
                android:backgroundTint="@color/gray"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/key_1"
